@model SEP.Models.Module

@{
    ViewBag.Title = "Create";
}
<h2>Create New Module</h2>
<hr />
<div class="col-lg-12">
    <input type="button" value="View All Modules" class="btn btn-info" onclick="location.href='@Url.Action("ViewAll", "Modules")'" />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ModuleId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ModuleId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ModuleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Year", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.semester, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.semester, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.RadioButtonFor(model => model.semester, "1", false) 1
                @Html.RadioButtonFor(model => model.semester, "2", false) 2
                @Html.ValidationMessageFor(model => model.semester, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LecturerIncharge, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("LecturerIncharge",null, htmlAttributes: new { @class = "form-control" })*@

                @Html.DropDownListFor(model => model.LecturerIncharge, new SelectList(ViewBag.Lecturers, "Name", "Name"),
              "N/A", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.LecturerIncharge, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaxCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaxCount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaxLecPanel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxLecPanel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaxLecPanel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-mdt" />
            </div>
        </div>
    </div>
}

<div>
    @*<div>
            @Html.ActionLink("View all in Details", "ViewAll")
        </div>*@

</div>

@{
    <script src="~/Scripts/js/jquery.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="https://lipis.github.io/bootstrap-sweetalert/lib/sweet-alert.js"></script>

    <script>
      
        @if(TempData["ErrMsg1"] != null)
        {<text>
        $(window).load(function () {
            $(document).ready(function () {
                swal({
                    title: "Check!",
                    text: "@TempData["ErrMsg1"]",
                    type: "warning"
                });

                TempData["ErrMsg1"].text = null;
            });
        });


        </text>
        }
    </script>
}

