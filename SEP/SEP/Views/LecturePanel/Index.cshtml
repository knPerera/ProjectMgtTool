@model IEnumerable<SEP.Models.Group>

<script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/datatable.min.js"></script>
<link href="~/Content/datatable.min.css" rel="stylesheet" />
   @{
       ViewBag.Title = "Allocated Lecturers";
}
@if ((bool)Session["LecIN"])
{

<div class="container">
    <nav role="navigation" class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">Lecture In Charge</a>
        </div>
        <!-- Collection of nav links, forms, and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="~/Groups">Allocate Supervisors</a></li>
                <li><a href="~/AllocatedLecturers">Create a Lecture Panel</a></li>
                <li class="active"><a href="~/LecturePanel">Overview of Lecture Panels</a></li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">View<b class="caret"></b></a>
                    <ul role="menu" class="dropdown-menu">
                        <li><a href="~/Students1">Student CVs</a></li>
                        <li><a href="~/Lecturers">Lecturer Details</a></li>

                    </ul>
                </li>
            </ul>


        </div>
    </nav>
</div>
<b>Overview Of Lecture Panel</b>


<table class="table" id="example" class="display" cellspacing="0" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supervisor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor)
            </td>
            <td>
                @Html.ActionLink("View Lecture Panel", "Details", new { id = item.GroupID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GroupID })
            </td>
        </tr>
    }
    
</table>
}
<script type="text/javascript">
    $('#example')
        .removeClass('display')
        .addClass('table table-striped table-bordered');
</script>
