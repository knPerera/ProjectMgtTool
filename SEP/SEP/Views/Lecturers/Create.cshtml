<link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/AssetRegister/assets/ico/apple-touch-icon-57-precomposed.png")">


<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />



<body onload="changeHashOnLoad();">

    <div>
        <div class="top-menu" style="margin-right:1232px">
            <ul class="nav pull-right top-menu">
                <li><a class="logout" id="logout1" href="@Url.Action("Login","Register")">Back to Login</a></li>
            </ul>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-7 text">
                    <br /><br /><br /><br />
                    <div class="description">
                        <img src="@Url.Content("~/Content/Images/lec123.png")" />
                    </div>
                </div>
                <div class="col-sm-5 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Sign up now</h3>
                            <p>Fill in the form below to get instant access:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-pencil"></i>
                        </div>
                    </div>

                    <div class="form-bottom" >
                        @using (Html.BeginForm("Create", "Lecturers", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registration-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h2>Register as Lecturer</h2>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LecturerId, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LecturerId, new { htmlAttributes = new { @class = "form-control", @placeholder ="LIDXXXXXXX" } })
                                        <div style="margin-left:20px">
                                            @Html.ValidationMessageFor(model => model.LecturerId, "", new { @class = "text-danger" })
                                        </div>
                                     </div>
                                </div>

                                <div class="form-group">
                                    <div style="margin-right:100px">
                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                    <div class="col-md-10" style="margin-left:16px">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                     </div>
                                </div>

                                <div class="form-group">
                                    <div style="margin-right:100px">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>   
                                         <div class="col-md-10" style="margin-left:16px">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ContactNo, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                               

                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Avatar">Avatar</label>
                                    <div class="col-md-10">
                                        <input class="form-control text-box single-line" id="Avatar" name="Avatar" type="file" value="" />
                                        @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger"})
                                        <p style="color:firebrick">@TempData["error"]</p>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" id="D1" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>

</body>

    @{

        <script src="~/Content/AssetRegister/assets/js/jquery-1.11.1.min.js"></script>
        <script src="~/Content/AssetRegister/assets/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/AssetRegister/assets/js/jquery.backstretch.min.js"></script>
        <script src="~/Content/AssetRegister/assets/js/retina-1.1.0.min.js"></script>
        <script src="~/Content/AssetRegister/assets/js/scripts.js"></script>
        <script type="text/javascript" src="~/Scripts/js/jquery.backstretch.min.js"></script>
        <script>
           

            $.backstretch("@Url.Content("~/Content/login-bg.jpg")", { speed: 500 });
            function changeHashOnLoad() {
                console.log("Enwa Enwa Enwa Kattiya Enwa hee lol");
                window.location.href += "#";
                setTimeout("changeHashAgain()", "50");
            }

            function changeHashAgain() {
                window.location.href += "1";
            }

            var storedHash = window.location.hash;
            window.setInterval(function () {
                if (window.location.hash != storedHash) {
                    window.location.hash = storedHash;
                }
            }, 50);
        </script>

    }

