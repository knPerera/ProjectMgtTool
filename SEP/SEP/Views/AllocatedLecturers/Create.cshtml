@model SEP.Models.AllocatedLecturers

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AllocatedLecturers</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            @Html.LabelFor(model => model.Supervisors, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownList("Supervisors", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Supervisors, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            @Html.LabelFor(model => model.Lecturers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Lecturers", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Lecturers, "", new { @class = "text-danger" })
            </div>
        </div>
       
      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    
    <a href="~/AllocatedLecturers/Index" class="btn btn-info btn-sm">
        <span class="glyphicon glyphicon-arrow-left"></span> Back
    </a>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
